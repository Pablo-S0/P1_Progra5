@{
    Layout = null; 
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body id="login">

    <div class="container" mt-5 pt-5 id="div1">

        <div class="row justify-content-center">

            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">

                    <div class="card-header">
                        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Volver</a> &nbsp; <p>Iniciar sesion</p>

                    </div>
                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">

                            <div class="form-group">
                                <label for="Correo">Correo:</label>
                                <input type="email" class="form-control" id="Correo" name="Correo" required>
                            </div>
                            <div class="form-group">
                                <label for="Clave">Contraseña:</label>
                                <input type="password" class="form-control" id="Clave" name="Clave" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                            
                            <p>¿No tienes una cuenta? <a asp-controller="Inicio" asp-action="Registrarse">Regístrate aquí</a></p>

                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
