@model Proyecto1_Progra5.Models.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body id="login">

    <div class="container" mt-5 pt-5 id="div1">

        <div class="row justify-content-center">

            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">

                    <div class="card-header">
                        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Volver</a> &nbsp; Registrate

                    </div>
                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">

                            <div class="form-group">
                                <label for="Correo">Correo:</label>
                                <input type="email" class="form-control" id="Correo" name="Correo" required>
                            </div>
                            <div class="form-group">
                                <label for="Clave">Contraseña:</label>
                                <input type="password" class="form-control" id="Clave" name="Clave" required>
                            </div>
                            <div class="form-group">
                                <label for="NombreCompleto">Nombre Completo:</label>
                                <input type="text" class="form-control" id="NombreCompleto" name="NombreCompleto" required>
                            </div>
                            <div class="form-group">
                                <label for="Telefono">Teléfono:</label>
                                <input type="tel" class="form-control" id="Telefono" name="Telefono" required>
                            </div>
                            <input type="hidden" name="Rol" value="Cliente">
                            <button type="submit" class="btn btn-primary">Registrarse</button>

                            <p>¿Ya tienes una cuenta? <a asp-controller="Inicio" asp-action="IniciarSesion">Inicia sesión aquí</a></p>

                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>